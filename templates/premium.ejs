<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap">

<div class="premium-page">
    <!-- Hero Section -->
    <section class="premium-hero">
        <div class="hero-container">
            <div class="hero-content">
                <div class="premium-badge">
                    <i class="fas fa-crown"></i>
                    <span>Premium</span>
                </div>
                
                <h1 class="hero-title">Unlock the Full Power of Cbot</h1>
                <p class="hero-description">
                    Take your Discord server to the next level with advanced features, unlimited customization, 
                    and priority support that makes managing your community effortless.
                </p>
                
                <div class="hero-stats">
                    <div class="stat-item">
                        <span class="stat-value">10,000+</span>
                        <span class="stat-label">Premium Servers</span>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <span class="stat-value">99.9%</span>
                        <span class="stat-label">Uptime</span>
                    </div>
                    <div class="stat-divider"></div>
                    <div class="stat-item">
                        <span class="stat-value">24/7</span>
                        <span class="stat-label">Support</span>
                    </div>
                </div>
            </div>
            
            <div class="hero-visual">
                <div class="floating-feature feature-1">
                    <i class="fas fa-rocket"></i>
                    <span>Lightning Fast</span>
                </div>
                <div class="floating-feature feature-2">
                    <i class="fas fa-infinity"></i>
                    <span>Unlimited Commands</span>
                </div>
                <div class="floating-feature feature-3">
                    <i class="fas fa-shield-alt"></i>
                    <span>Advanced Security</span>
                </div>
                <div class="premium-crown">
                    <i class="fas fa-crown"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Pricing Section -->
    <section class="pricing-section">
        <div class="container">
            <div class="section-header">
                <h2>Choose Your Premium Plan</h2>
                <p>Flexible pricing designed to grow with your community</p>
                
                <!-- Billing Toggle -->
                <div class="billing-toggle">
                    <span class="toggle-label">Monthly</span>
                    <button class="toggle-btn" id="billingToggle">
                        <span class="toggle-slider"></span>
                    </button>
                    <span class="toggle-label">
                        Yearly 
                        <span class="discount-badge">Save 20%</span>
                    </span>
                </div>
            </div>
            
            <div class="pricing-grid">
                <!-- Starter Plan -->
                <div class="pricing-card">
                    <div class="plan-header">
                        <div class="plan-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <h3 class="plan-name">Starter</h3>
                        <p class="plan-description">Perfect for small communities</p>
                    </div>
                    
                    <div class="plan-pricing">
                        <span class="currency">$</span>
                        <span class="price" data-monthly="2.99" data-yearly="2.39">2.99</span>
                        <span class="period">/month</span>
                    </div>
                    
                    <div class="plan-features">
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>1 Premium Server</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>50 Custom Commands</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Advanced Logging</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Priority Support</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Custom Embeds</span>
                        </div>
                    </div>
                    
                    <button class="plan-btn" onclick="selectPlan('starter')">
                        Get Started
                    </button>
                </div>

                <!-- Popular Plan -->
                <div class="pricing-card popular">
                    <div class="popular-badge">
                        <i class="fas fa-fire"></i>
                        Most Popular
                    </div>
                    
                    <div class="plan-header">
                        <div class="plan-icon">
                            <i class="fas fa-gem"></i>
                        </div>
                        <h3 class="plan-name">Professional</h3>
                        <p class="plan-description">Ideal for growing communities</p>
                    </div>
                    
                    <div class="plan-pricing">
                        <span class="currency">$</span>
                        <span class="price" data-monthly="7.99" data-yearly="6.39">7.99</span>
                        <span class="period">/month</span>
                    </div>
                    
                    <div class="plan-features">
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>3 Premium Servers</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Unlimited Custom Commands</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Advanced Automod</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Ticket System</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Custom Suggestions</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Advanced Reports</span>
                        </div>
                    </div>
                    
                    <button class="plan-btn primary" onclick="selectPlan('professional')">
                        Get Professional
                    </button>
                </div>

                <!-- Enterprise Plan -->
                <div class="pricing-card">
                    <div class="plan-header">
                        <div class="plan-icon">
                            <i class="fas fa-crown"></i>
                        </div>
                        <h3 class="plan-name">Enterprise</h3>
                        <p class="plan-description">For large communities</p>
                    </div>
                    
                    <div class="plan-pricing">
                        <span class="currency">$</span>
                        <span class="price" data-monthly="11.99" data-yearly="9.59">11.99</span>
                        <span class="period">/month</span>
                    </div>
                    
                    <div class="plan-features">
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>5 Premium Servers</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Everything in Professional</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>White-label Options</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>API Access</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Custom Integrations</span>
                        </div>
                        <div class="feature-item">
                            <i class="fas fa-check"></i>
                            <span>Dedicated Support</span>
                        </div>
                    </div>
                    
                    <button class="plan-btn" onclick="selectPlan('enterprise')">
                        Get Enterprise
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container">
            <div class="section-header">
                <h2>Premium Features</h2>
                <p>Discover what makes Cbot Premium the ultimate Discord bot solution</p>
            </div>
            
            <div class="features-grid">
                <div class="feature-showcase">
                    <div class="feature-image">
                        <img src="<%= domain %>/premium/customcommands.jpg" alt="Custom Commands" onerror="this.src='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%22400%22 height=%22300%22><rect width=%22100%25%22 height=%22100%25%22 fill=%22%235865f2%22/><text x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22white%22 font-size=%2224%22>Custom Commands</text></svg>'">
                    </div>
                    <div class="feature-content">
                        <div class="feature-icon">
                            <i class="fas fa-terminal"></i>
                        </div>
                        <h3>Unlimited Custom Commands</h3>
                        <p>Create powerful custom commands with our intuitive builder. Use variables, conditions, and embed responses to build exactly what your community needs.</p>
                        <div class="feature-highlights">
                            <span class="highlight">Advanced Variables</span>
                            <span class="highlight">Conditional Logic</span>
                            <span class="highlight">Rich Embeds</span>
                        </div>
                    </div>
                </div>

                <div class="feature-showcase reverse">
                    <div class="feature-image">
                        <img src="<%= domain %>/premium/reports.JPG" alt="Server Reports" onerror="this.src='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%22400%22 height=%22300%22><rect width=%22100%25%22 height=%22100%25%22 fill=%22%2300d4aa%22/><text x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22white%22 font-size=%2224%22>Server Reports</text></svg>'">
                    </div>
                    <div class="feature-content">
                        <div class="feature-icon">
                            <i class="fas fa-flag"></i>
                        </div>
                        <h3>Advanced Report System</h3>
                        <p>Streamline moderation with a comprehensive reporting system featuring upvotes, categories, and automated workflows for faster resolution.</p>
                        <div class="feature-highlights">
                            <span class="highlight">Report Categories</span>
                            <span class="highlight">Upvote System</span>
                            <span class="highlight">Auto-actions</span>
                        </div>
                    </div>
                </div>

                <div class="feature-showcase">
                    <div class="feature-image">
                        <img src="<%= domain %>/premium/suggestions.jpg" alt="Suggestions" onerror="this.src='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%22400%22 height=%22300%22><rect width=%22100%25%22 height=%22100%25%22 fill=%22%23faa61a%22/><text x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22white%22 font-size=%2224%22>Suggestions</text></svg>'">
                    </div>
                    <div class="feature-content">
                        <div class="feature-icon">
                            <i class="fas fa-lightbulb"></i>
                        </div>
                        <h3>Customizable Suggestions</h3>
                        <p>Engage your community with a beautiful suggestion system. Customize colors, reactions, and approval workflows to match your server's style.</p>
                        <div class="feature-highlights">
                            <span class="highlight">Custom Styling</span>
                            <span class="highlight">Approval System</span>
                            <span class="highlight">Multiple Reactions</span>
                        </div>
                    </div>
                </div>

                <div class="feature-showcase reverse">
                    <div class="feature-image">
                        <img src="<%= domain %>/premium/tickets.JPG" alt="Ticket System" onerror="this.src='data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%22400%22 height=%22300%22><rect width=%22100%25%22 height=%22100%25%22 fill=%22%23ed4245%22/><text x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22white%22 font-size=%2224%22>Ticket System</text></svg>'">
                    </div>
                    <div class="feature-content">
                        <div class="feature-icon">
                            <i class="fas fa-ticket-alt"></i>
                        </div>
                        <h3>Advanced Ticket System</h3>
                        <p>Provide exceptional support with a feature-rich ticket system. Multiple categories, auto-responses, and transcript saving keep you organized.</p>
                        <div class="feature-highlights">
                            <span class="highlight">Multiple Categories</span>
                            <span class="highlight">Auto-responses</span>
                            <span class="highlight">Transcript Saving</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Additional Features -->
    <section class="additional-features">
        <div class="container">
            <div class="section-header">
                <h2>Even More Premium Benefits</h2>
                <p>Unlock the full potential of your Discord server</p>
            </div>
            
            <div class="benefits-grid">
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-infinity"></i>
                    </div>
                    <h4>Unlimited Everything</h4>
                    <p>No limits on custom commands, auto-responses, or configurations</p>
                </div>
                
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <h4>Advanced Moderation</h4>
                    <p>AI-powered automod with smart detection and custom actions</p>
                </div>
                
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4>Detailed Analytics</h4>
                    <p>Track server growth, engagement, and bot usage with comprehensive stats</p>
                </div>
                
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-headset"></i>
                    </div>
                    <h4>Priority Support</h4>
                    <p>Get help when you need it with dedicated premium support</p>
                </div>
                
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-code"></i>
                    </div>
                    <h4>API Access</h4>
                    <p>Integrate with external services and build custom applications</p>
                </div>
                
                <div class="benefit-card">
                    <div class="benefit-icon">
                        <i class="fas fa-rocket"></i>
                    </div>
                    <h4>Early Access</h4>
                    <p>Be the first to try new features before they're released to everyone</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container">
            <div class="cta-content">
                <h2>Ready to Upgrade?</h2>
                <p>Join thousands of server owners who have already upgraded to Premium</p>
                <div class="cta-buttons">
                    <button class="cta-btn primary" onclick="selectPlan('professional')">
                        <i class="fas fa-crown"></i>
                        Start Premium Today
                    </button>
                    <a href="/support" class="cta-btn secondary">
                        <i class="fas fa-question-circle"></i>
                        Have Questions?
                    </a>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
/* Premium Page Styles */
.premium-page {
    background: linear-gradient(135deg, #0a0e1a 0%, #101628 100%);
    color: #ffffff;
    min-height: 100vh;
    padding-top: 80px;
}

/* Hero Section */
.premium-hero {
    padding: 80px 0 120px;
    position: relative;
    overflow: hidden;
}

.premium-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 20%, rgba(250, 166, 26, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 80%, rgba(88, 101, 242, 0.1) 0%, transparent 50%);
    z-index: 0;
}

.hero-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    position: relative;
    z-index: 1;
}

.premium-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: linear-gradient(135deg, #faa61a 0%, #f39c12 100%);
    color: white;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 24px;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 24px;
    background: linear-gradient(135deg, #ffffff 0%, #b9bbbe 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.hero-description {
    font-size: 1.25rem;
    color: #b9bbbe;
    line-height: 1.6;
    margin-bottom: 40px;
}

.hero-stats {
    display: flex;
    align-items: center;
    gap: 24px;
    padding: 24px;
    background: linear-gradient(135deg, #1e2439 0%, #252b42 100%);
    border-radius: 16px;
    border: 1px solid #2c3244;
}

.stat-item {
    text-align: center;
}

.stat-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #faa61a;
    line-height: 1;
}

.stat-label {
    font-size: 0.875rem;
    color: #b9bbbe;
    margin-top: 4px;
}

.stat-divider {
    width: 1px;
    height: 40px;
    background: #2c3244;
}

/* Hero Visual */
.hero-visual {
    position: relative;
    height: 500px;
}

.floating-feature {
    position: absolute;
    background: linear-gradient(135deg, #1e2439 0%, #252b42 100%);
    border: 1px solid #2c3244;
    border-radius: 12px;
    padding: 16px 20px;
    display: flex;
    align-items: center;
    gap: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    animation: float 6s ease-in-out infinite;
}

.floating-feature i {
    color: #faa61a;
    font-size: 1.25rem;
}

.floating-feature span {
    font-size: 0.875rem;
    font-weight: 500;
    color: #ffffff;
}

.feature-1 {
    top: 10%;
    left: 10%;
    animation-delay: 0s;
}

.feature-2 {
    top: 50%;
    right: 10%;
    animation-delay: 2s;
}

.feature-3 {
    bottom: 10%;
    left: 20%;
    animation-delay: 4s;
}

.premium-crown {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: linear-gradient(135deg, #faa61a 0%, #f39c12 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 16px 64px rgba(250, 166, 26, 0.4);
    animation: pulse 4s ease-in-out infinite;
}

.premium-crown i {
    font-size: 4rem;
    color: white;
}

@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
}

@keyframes pulse {
    0%, 100% { box-shadow: 0 16px 64px rgba(250, 166, 26, 0.4); }
    50% { box-shadow: 0 16px 64px rgba(250, 166, 26, 0.6); }
}

/* Container */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
}

/* Section Headers */
.section-header {
    text-align: center;
    margin-bottom: 80px;
}

.section-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 16px;
    background: linear-gradient(135deg, #ffffff 0%, #b9bbbe 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.section-header p {
    font-size: 1.125rem;
    color: #b9bbbe;
}

/* Pricing Section */
.pricing-section {
    padding: 120px 0;
    background: linear-gradient(135deg, #101628 0%, #1a1f35 100%);
}

.billing-toggle {
    display: flex;
    align-items: center;
    gap: 16px;
    justify-content: center;
    margin-top: 32px;
}

.toggle-label {
    font-weight: 600;
    color: #b9bbbe;
    transition: color 0.3s ease;
}

.toggle-label.active {
    color: #ffffff;
}

.toggle-btn {
    position: relative;
    width: 60px;
    height: 30px;
    background: #2c3244;
    border: none;
    border-radius: 15px;
    cursor: pointer;
    transition: background 0.3s ease;
}

.toggle-btn.active {
    background: #faa61a;
}

.toggle-slider {
    position: absolute;
    top: 3px;
    left: 3px;
    width: 24px;
    height: 24px;
    background: white;
    border-radius: 50%;
    transition: transform 0.3s ease;
}

.toggle-btn.active .toggle-slider {
    transform: translateX(30px);
}

.discount-badge {
    background: linear-gradient(135deg, #3ba55d 0%, #2d8a47 100%);
    color: white;
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 700;
    margin-left: 8px;
}

.pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
    margin-top: 60px;
}

/* Pricing Cards */
.pricing-card {
    background: linear-gradient(135deg, #1e2439 0%, #252b42 100%);
    border: 1px solid #2c3244;
    border-radius: 24px;
    padding: 40px 32px;
    text-align: center;
    position: relative;
    transition: all 0.3s ease;
