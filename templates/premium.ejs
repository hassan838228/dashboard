<style>
/* Premium Hero Section */
.premium-hero {
    min-height: 100vh;
    background: linear-gradient(135deg, var(--black-soft) 0%, var(--gray-darker) 50%, var(--black-light) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.premium-hero-content {
    text-align: center;
    z-index: 2;
    position: relative;
    max-width: 800px;
    padding: 0 var(--space-lg);
}

.crown-animation {
    position: relative;
    display: inline-block;
    margin-bottom: var(--space-2xl);
}

.crown-animation i {
    font-size: 5rem;
    color: var(--gold-primary);
    animation: crown-float 3s ease-in-out infinite;
}

.crown-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    background: radial-gradient(circle, rgba(255, 215, 0, 0.4) 0%, transparent 70%);
    border-radius: 50%;
    animation: crown-glow 3s ease-in-out infinite;
}

.premium-title {
    font-size: clamp(var(--text-4xl), 8vw, var(--text-6xl));
    margin-bottom: var(--space-lg);
    background: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary), var(--gold-accent));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.premium-preview {
    display: flex;
    justify-content: center;
    gap: var(--space-xl);
    margin: var(--space-2xl) 0;
    flex-wrap: wrap;
}

.preview-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md);
    background: rgba(255, 215, 0, 0.1);
    border-radius: var(--radius-full);
    border: 1px solid rgba(255, 215, 0, 0.2);
}

.preview-item i {
    color: var(--gold-primary);
}

/* Premium Plans */
.premium-plans {
    padding: var(--space-3xl) 0;
    background: var(--bg-secondary);
}

.plans-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-2xl);
    max-width: 1200px;
    margin: 0 auto;
}

.plan-card {
    background: var(--bg-card);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    border: 2px solid transparent;
    transition: var(--transition-normal);
    position: relative;
    overflow: hidden;
}

.plan-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
}

.plan-card.featured {
    border-color: var(--gold-primary);
    box-shadow: var(--shadow-golden-glow);
    transform: scale(1.05);
}

.plan-badge {
    position: absolute;
    top: -1rem;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(45deg, var(--gold-primary), var(--gold-secondary));
    color: var(--black-soft);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 700;
}

.plan-price {
    margin: var(--space-lg) 0;
}

.plan-price .amount {
    font-size: var(--text-5xl);
    font-weight: 900;
    color: var(--gold-primary);
}

.plan-features {
    list-style: none;
    margin: var(--space-xl) 0;
}

.plan-features li {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) 0;
}

.plan-features i {
    color: var(--gold-primary);
}

.premium-plan-btn {
    background: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary));
    color: var(--black-soft);
}

/* Premium Features */
.premium-features {
    padding: var(--space-3xl) 0;
}

.premium-features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-2xl);
}

.premium-feature {
    text-align: center;
    padding: var(--space-xl);
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 215, 0, 0.1);
    transition: var(--transition-normal);
}

.premium-feature:hover {
    transform: translateY(-5px);
    border-color: var(--gold-accent);
    box-shadow: var(--shadow-md);
}

.feature-icon-wrapper {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary));
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-lg);
}

.feature-icon-wrapper i {
    font-size: 2rem;
    color: var(--black-soft);
}

/* FAQ Section */
.premium-faq {
    padding: var(--space-3xl) 0;
    background: var(--bg-secondary);
}

.faq-grid {
    max-width: 800px;
    margin: 0 auto;
}

.faq-item {
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    margin-bottom: var(--space-lg);
    overflow: hidden;
}

.faq-question {
    padding: var(--space-xl);
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    transition: var(--transition-normal);
}

.faq-question:hover {
    background: rgba(255, 215, 0, 0.1);
}

.faq-answer {
    padding: 0 var(--space-xl) var(--space-xl);
    color: var(--text-secondary);
}

/* Animations */
@keyframes crown-float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    25% { transform: translateY(-10px) rotate(2deg); }
    50% { transform: translateY(-5px) rotate(0deg); }
    75% { transform: translateY(-15px) rotate(-2deg); }
}

@keyframes crown-glow {
    0%, 100% { opacity: 0.4; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.7; transform: translate(-50%, -50%) scale(1.1); }
}

/* Responsive */
@media (max-width: 768px) {
    .plans-grid {
        grid-template-columns: 1fr;
    }
    
    .plan-card.featured {
        transform: none;
    }
    
    .premium-preview {
        flex-direction: column;
        align-items: center;
    }
}
</style>

<!-- Premium JavaScript -->
<script>
// Language translations for premium page
const premiumTranslations = {
    ar: {
        'premium-title': 'Cbot البريميوم',
        'premium-subtitle': 'اطلق العنان لقوة Cbot الكاملة',
