        'basic-plan': 'الأساسي',
        'premium-plan': 'البريميوم',
        'enterprise-plan': 'المؤسسات',
        'per-month': '/شهر',
        'basic-commands': 'الأوامر الأساسية',
        'basic-logging': 'تسجيل محدود',
        'community-support': 'دعم المجتمع',
        'get-started': 'ابدأ مجاناً',
        'most-popular': 'الأكثر شيوعاً',
        'advanced-logging': 'تسجيل متقدم',
        'custom-embeds': 'رسائل مدمجة مخصصة',
        'custom-branding': 'علامة تجارية مخصصة',
        'upgrade-premium': 'ترقية للبريميوم',
        'everything-premium': 'كل ميزات البريميوم',
        'dedicated-support': 'دعم مخصص',
        'custom-development': 'تطوير مخصص',
