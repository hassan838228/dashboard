    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 8px;
}

.plan-description {
    color: #b9bbbe;
    font-size: 1rem;
}

.plan-pricing {
    display: flex;
    align-items: baseline;
    justify-content: center;
    margin-bottom: 40px;
}

.currency {
    font-size: 1.5rem;
    color: #b9bbbe;
    margin-right: 4px;
}

.price {
    font-size: 3rem;
    font-weight: 800;
    color: #ffffff;
}

.period {
    font-size: 1rem;
    color: #b9bbbe;
    margin-left: 4px;
}

.plan-features {
