<script>
// Billing toggle functionality
document.addEventListener('DOMContentLoaded', function() {
    const billingToggle = document.getElementById('billingToggle');
    const toggleLabels = document.querySelectorAll('.toggle-label');
    const prices = document.querySelectorAll('.price');
    
    let isYearly = false;
    
    billingToggle.addEventListener('click', function() {
        isYearly = !isYearly;
        
        // Toggle button state
        billingToggle.classList.toggle('active');
        
        // Update label states
        toggleLabels.forEach((label, index) => {
            if ((index === 0 && !isYearly) || (index === 1 && isYearly)) {
                label.classList.add('active');
            } else {
                label.classList.remove('active');
            }
        });
        
        // Update prices
        prices.forEach(price => {
            const monthlyPrice = price.dataset.monthly;
            const yearlyPrice = price.dataset.yearly;
            
            if (isYearly) {
                price.textContent = yearlyPrice;
            } else {
                price.textContent = monthlyPrice;
            }
        });
    });
    
    // Initialize state
    toggleLabels[0].classList.add('active');
});

// Plan selection functionality
function selectPlan(planType) {
