        'today': 'Today',
        'service-status-title': 'Service Status',
        'bot-core': 'Bot Core',
        'database': 'Database',
        'music-service': 'Music Service',
        'api-gateway': 'API Gateway',
        'recent-incidents': 'Recent Incidents',
        'resolved': 'Resolved',
        'all-systems-operational': 'All Systems Operational',
        'no-current-issues': 'No current issues affecting service'
    }
};

// Initialize status page
document.addEventListener('DOMContentLoaded', function() {
    initializeStatusAnimations();
    initializeRealtimeUpdates();
    
    // Apply current language
    if (typeof currentLanguage !== 'undefined') {
        applyStatusLanguage(currentLanguage);
    }
});

function applyStatusLanguage(lang) {
    const elements = document.querySelectorAll('[data-lang-key]');
    elements.forEach(element => {
        const key = element.getAttribute('data-lang-key');
        if (statusTranslations[lang] && statusTranslations[lang][key]) {
            element.textContent = statusTranslations[lang][key];
        }
    });
}

function initializeStatusAnimations() {
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
                
                // Animate progress bars
                const progressBars = entry.target.querySelectorAll('.progress-fill');
                progressBars.forEach(bar => {
                    const width = bar.dataset.value || bar.style.width;
                    bar.style.width = '0%';
                    setTimeout(() => {
                        bar.style.width = width + '%';
                    }, 500);
                });
            }
        });
    }, observerOptions);
    
    document.querySelectorAll('.animate-fade-in').forEach(el => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(30px)';
        el.style.transition = 'opacity 0.8s ease, transform 0.8s ease';
        observer.observe(el);
    });
}

function initializeRealtimeUpdates() {
    // Simulate real-time updates
    setInterval(() => {
        updateResponseTime();
        updateCommandsCount();
        updateProgressBars();
    }, 5000);
}

function updateResponseTime() {
    const responseTimeEl = document.getElementById('response-time');
    if (responseTimeEl) {
        const times = ['< 50ms', '< 45ms', '< 55ms', '< 48ms'];
        const randomTime = times[Math.floor(Math.random() * times.length)];
        responseTimeEl.textContent = randomTime;
    }
}

function updateCommandsCount() {
    const commandsEl = document.getElementById('commands-today');
    if (commandsEl) {
        const currentCount = parseInt(commandsEl.textContent.replace(',', ''));
        const newCount = currentCount + Math.floor(Math.random() * 10);
        commandsEl.textContent = newCount.toLocaleString();
    }
}

function updateProgressBars() {
    const progressBars = document.querySelectorAll('.progress-fill');
    progressBars.forEach(bar => {
        const currentWidth = parseFloat(bar.style.width);
        const variation = (Math.random() - 0.5) * 4; // ±2%
        const newWidth = Math.max(5, Math.min(95, currentWidth + variation));
        bar.style.width = newWidth + '%';
        bar.dataset.value = Math.round(newWidth);
        
        // Update metric value text
        const metricValue = bar.closest('.metric-item')?.querySelector('.metric-value');
        if (metricValue) {
            metricValue.textContent = Math.round(newWidth) + '%';
        }
    });
}
