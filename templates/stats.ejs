<style>
/* Status Hero */
.status-hero {
    min-height: 80vh;
    background: linear-gradient(135deg, var(--black-soft) 0%, var(--gray-darker) 50%, var(--black-light) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.status-hero-content {
    text-align: center;
    z-index: 2;
    position: relative;
    max-width: 1000px;
    padding: 0 var(--space-lg);
}

.status-indicator {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-xl);
}

.status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    animation: pulse-dot 2s infinite;
}

.status-dot.online {
    background: #00d26a;
    box-shadow: 0 0 20px rgba(0, 210, 106, 0.5);
}

.status-text {
    font-size: var(--text-lg);
    color: #00d26a;
    font-weight: 600;
}

.status-title {
    font-size: clamp(var(--text-4xl), 8vw, var(--text-6xl));
    margin-bottom: var(--space-lg);
    background: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.realtime-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-lg);
    margin-top: var(--space-2xl);
}

.stat-box {
    background: var(--bg-card);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 215, 0, 0.2);
    display: flex;
    align-items: center;
    gap: var(--space-md);
    transition: var(--transition-normal);
}

.stat-box:hover {
    transform: translateY(-5px);
    border-color: var(--gold-accent);
    box-shadow: var(--shadow-md);
}

.stat-icon {
    font-size: 2rem;
    color: var(--gold-primary);
}

.stat-value {
    display: block;
    font-size: var(--text-2xl);
    font-weight: 900;
    color: var(--gold-primary);
}

.stat-label {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Performance Metrics */
.performance-metrics {
    padding: var(--space-3xl) 0;
    background: var(--bg-secondary);
}

.metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: var(--space-2xl);
}

.metric-card {
    background: var(--bg-card);
    border-radius: var(--radius-xl);
    padding: var(--space-2xl);
    border: 1px solid rgba(255, 215, 0, 0.1);
    transition: var(--transition-normal);
}

.metric-card:hover {
    transform: translateY(-5px);
    border-color: var(--gold-accent);
    box-shadow: var(--shadow-lg);
}

.metric-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-xl);
}

.metric-header h3 {
    color: var(--gold-primary);
    font-size: var(--text-xl);
}

.health-indicator {
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
}

.health-indicator.excellent {
    background: rgba(0, 210, 106, 0.2);
    color: #00d26a;
    border: 1px solid #00d26a;
}

.metric-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-md);
}

.progress-bar {
    flex: 1;
    height: 8px;
    background: var(--gray-dark);
    border-radius: var(--radius-full);
    margin: 0 var(--space-md);
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--gold-primary), var(--gold-secondary));
    border-radius: var(--radius-full);
    transition: width 1s ease;
}

.api-status {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
}

.api-status.online {
    background: rgba(0, 210, 106, 0.2);
    color: #00d26a;
}

.api-metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: var(--space-lg);
}

.api-metric {
    text-align: center;
    padding: var(--space-lg);
    background: rgba(255, 215, 0, 0.05);
    border-radius: var(--radius-md);
}

.api-metric-label {
    font-size: var(--text-sm);
    color: var(--text-muted);
    margin-bottom: var(--space-sm);
}

.api-metric-value {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--gold-primary);
}

.commands-breakdown {
    margin-top: var(--space-lg);
}

.command-item {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-md);
}

.command-name {
    min-width: 100px;
    font-size: var(--text-sm);
    color: var(--text-secondary);
}

.command-bar {
    flex: 1;
    height: 6px;
    background: var(--gray-dark);
    border-radius: var(--radius-full);
    overflow: hidden;
}

.command-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--gold-accent), var(--gold-primary));
    border-radius: var(--radius-full);
    transition: width 1s ease;
}

.command-percent {
    min-width: 40px;
    text-align: right;
    font-size: var(--text-sm);
    color: var(--gold-primary);
    font-weight: 600;
}

/* Service Status */
.service-status {
    padding: var(--space-3xl) 0;
}

.services-grid {
    display: grid;
    gap: var(--space-lg);
}

.service-item {
    background: var(--bg-card);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 215, 0, 0.1);
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: var(--space-lg);
    align-items: center;
    transition: var(--transition-normal);
}

.service-item:hover {
    border-color: var(--gold-accent);
    transform: translateX(5px);
}

.service-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--gold-primary), var(--gold-secondary));
    display: flex;
    align-items: center;
    justify-content: center;
}

.service-icon i {
    font-size: var(--text-xl);
    color: var(--black-soft);
}

.service-info h3 {
    color: var(--text-primary);
    margin-bottom: var(--space-sm);
}

.service-status-indicator {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
}

.service-status-indicator .status-dot {
    width: 8px;
    height: 8px;
}

.service-status-indicator.operational .status-dot {
    background: #00d26a;
}

.service-uptime {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--gold-primary);
}

/* Recent Incidents */
.recent-incidents {
    padding: var(--space-3xl) 0;
    background: var(--bg-secondary);
}

.incident-item {
    background: var(--bg-card);
    padding: var(--space-xl);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(255, 215, 0, 0.1);
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: var(--space-lg);
    align-items: center;
    margin-bottom: var(--space-lg);
}

.incident-status i {
    font-size: var(--text-xl);
    color: #00d26a;
}

.incident-title {
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-sm);
}

.incident-description {
    color: var(--text-secondary);
    margin-bottom: var(--space-sm);
}

.incident-time {
    font-size: var(--text-sm);
    color: var(--text-muted);
}

.incident-badge.resolved {
    background: rgba(0, 210, 106, 0.2);
    color: #00d26a;
    padding: 0.5rem 1rem;
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
}

.no-incidents {
    text-align: center;
    padding: var(--space-3xl);
    background: var(--bg-card);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(0, 210, 106, 0.2);
}

.no-incidents i {
    font-size: 3rem;
    color: #00d26a;
    margin-bottom: var(--space-lg);
}

.no-incidents h3 {
    color: #00d26a;
    margin-bottom: var(--space-md);
}

/* Animations */
@keyframes pulse-dot {
    0%, 100% { 
        transform: scale(1); 
        opacity: 1; 
    }
    50% { 
        transform: scale(1.2); 
        opacity: 0.7; 
    }
}

/* Responsive */
@media (max-width: 768px) {
    .realtime-stats {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .metrics-grid {
        grid-template-columns: 1fr;
    }
    
    .service-item {
        grid-template-columns: 1fr;
        text-align: center;
    }
    
    .incident-item {
        grid-template-columns: 1fr;
        text-align: center;
    }
}
</style>

