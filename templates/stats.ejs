<%- include("partials/head", {bot, user, path, description, title: "Cbot - حالة البوت" , url, image }) %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="<%= domain %>/css/index.css">

<div class="page-content">
    <body>
        <%- include("partials/nav", {bot, user, path, domain}) %>

        <!-- Bot Status Hero -->
        <section class="status-hero">
            <div class="status-hero-content">
                <div class="status-indicator">
                    <div class="status-dot online"></div>
                    <span class="status-text" data-lang-key="bot-online">البوت متصل</span>
                </div>
                
                <h1 class="status-title animate-fade-in">
                    <span data-lang-key="status-title">حالة البوت</span>
                </h1>
                
                <p class="status-description animate-fade-in" style="animation-delay: 0.2s;">
                    <span data-lang-key="status-description">مراقبة أداء Cbot وإحصائيات الخادم في الوقت الفعلي</span>
                </p>

                <!-- Real-time Stats -->
                <div class="realtime-stats animate-fade-in" style="animation-delay: 0.4s;">
                    <div class="stat-box">
                        <i class="fas fa-heartbeat stat-icon"></i>
                        <div class="stat-content">
                            <span class="stat-value" id="uptime-stat">99.9%</span>
                            <span class="stat-label" data-lang-key="uptime">وقت التشغيل</span>
                        </div>
                    </div>
                    
                    <div class="stat-box">
                        <i class="fas fa-tachometer-alt stat-icon"></i>
                        <div class="stat-content">
                            <span class="stat-value" id="response-time">< 50ms</span>
                            <span class="stat-label" data-lang-key="response-time">زمن الاستجابة</span>
                        </div>
                    </div>
                    
                    <div class="stat-box">
                        <i class="fas fa-server stat-icon"></i>
                        <div class="stat-content">
                            <span class="stat-value" id="servers-count"><%= bot.guilds.cache.size %></span>
                            <span class="stat-label" data-lang-key="servers">الخوادم</span>
                        </div>
                    </div>
                    
                    <div class="stat-box">
                        <i class="fas fa-users stat-icon"></i>
                        <div class="stat-content">
                            <span class="stat-value" id="users-count"><%=  bot.guilds.cache.reduce((a, g) => a + g.memberCount, 0) %></span>
                            <span class="stat-label" data-lang-key="users">المستخدمين</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Floating Status Elements -->
            <div class="status-particles"></div>
        </section>

        <!-- Performance Metrics -->
        <section class="performance-metrics">
            <div class="metrics-container">
                <h2 class="metrics-title animate-fade-in">
                    <span data-lang-key="performance-title">مقاييس الأداء</span>
                </h2>
                
                <div class="metrics-grid">
                    <!-- System Health -->
                    <div class="metric-card animate-fade-in" style="animation-delay: 0.2s;">
                        <div class="metric-header">
                            <h3 data-lang-key="system-health">صحة النظام</h3>
                            <div class="health-indicator excellent">
                                <span data-lang-key="excellent">ممتاز</span>
                            </div>
                        </div>
                        
                        <div class="metric-details">
                            <div class="metric-item">
                                <span data-lang-key="cpu-usage">استخدام المعالج</span>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: 15%" data-value="15"></div>
                                </div>
                                <span class="metric-value">15%</span>
                            </div>
                            
                            <div class="metric-item">
                                <span data-lang-key="memory-usage">استخدام الذاكرة</span>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: 45%" data-value="45"></div>
                                </div>
                                <span class="metric-value">45%</span>
                            </div>
                            
                            <div class="metric-item">
                                <span data-lang-key="disk-usage">استخدام القرص</span>
                                <div class="progress-bar">
                                    <div class="progress-fill" style="width: 30%" data-value="30"></div>
                                </div>
                                <span class="metric-value">30%</span>
                            </div>
                        </div>
                    </div>

                    <!-- API Performance -->
                    <div class="metric-card animate-fade-in" style="animation-delay: 0.4s;">
                        <div class="metric-header">
                            <h3 data-lang-key="api-performance">أداء API</h3>
                            <div class="api-status online">
                                <i class="fas fa-check-circle"></i>
                                <span data-lang-key="operational">تشغيلي</span>
                            </div>
                        </div>
                        
                        <div class="api-metrics">
                            <div class="api-metric">
                                <div class="api-metric-label" data-lang-key="requests-per-minute">الطلبات/دقيقة</div>
                                <div class="api-metric-value">1,250</div>
                            </div>
                            <div class="api-metric">
                                <div class="api-metric-label" data-lang-key="avg-response">متوسط الاستجابة</div>
                                <div class="api-metric-value">42ms</div>
                            </div>
                            <div class="api-metric">
                                <div class="api-metric-label" data-lang-key="success-rate">معدل النجاح</div>
                                <div class="api-metric-value">99.8%</div>
                            </div>
                        </div>
                    </div>

                    <!-- Commands Statistics -->
                    <div class="metric-card animate-fade-in" style="animation-delay: 0.6s;">
                        <div class="metric-header">
                            <h3 data-lang-key="commands-stats">إحصائيات الأوامر</h3>
                            <div class="commands-indicator">
                                <i class="fas fa-terminal"></i>
                                <span id="commands-today">12,456</span>
                                <span data-lang-key="today">اليوم</span>
                            </div>
                        </div>
                        
                        <div class="commands-breakdown">
                            <div class="command-item">
                                <span class="command-name">Moderation</span>
                                <div class="command-bar">
                                    <div class="command-fill" style="width: 35%"></div>
                                </div>
                                <span class="command-percent">35%</span>
                            </div>
                            <div class="command-item">
                                <span class="command-name">Music</span>
                                <div class="command-bar">
                                    <div class="command-fill" style="width: 28%"></div>
                                </div>
                                <span class="command-percent">28%</span>
                            </div>
                            <div class="command-item">
                                <span class="command-name">Fun</span>
                                <div class="command-bar">
                                    <div class="command-fill" style="width: 22%"></div>
                                </div>
                                <span class="command-percent">22%</span>
                            </div>
                            <div class="command-item">
                                <span class="command-name">Utility</span>
                                <div class="command-bar">
                                    <div class="command-fill" style="width: 15%"></div>
                                </div>
                                <span class="command-percent">15%</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Service Status -->
        <section class="service-status">
            <div class="service-container">
                <h2 class="service-title animate-fade-in">
                    <span data-lang-key="service-status-title">حالة الخدمات</span>
                </h2>
                
                <div class="services-grid">
                    <div class="service-item animate-fade-in" style="animation-delay: 0.2s;">
                        <div class="service-icon">
                            <i class="fas fa-robot"></i>
                        </div>
                        <div class="service-info">
                            <h3 data-lang-key="bot-core">نواة البوت</h3>
                            <div class="service-status-indicator operational">
                                <div class="status-dot"></div>
                                <span data-lang-key="operational">تشغيلي</span>
                            </div>
                        </div>
                        <div class="service-uptime">99.9%</div>
                    </div>
                    
                    <div class="service-item animate-fade-in" style="animation-delay: 0.3s;">
                        <div class="service-icon">
                            <i class="fas fa-database"></i>
                        </div>
                        <div class="service-info">
                            <h3 data-lang-key="database">قاعدة البيانات</h3>
                            <div class="service-status-indicator operational">
                                <div class="status-dot"></div>
                                <span data-lang-key="operational">تشغيلي</span>
                            </div>
                        </div>
                        <div class="service-uptime">100%</div>
                    </div>
                    
                    <div class="service-item animate-fade-in" style="animation-delay: 0.4s;">
                        <div class="service-icon">
                            <i class="fas fa-music"></i>
                        </div>
                        <div class="service-info">
                            <h3 data-lang-key="music-service">خدمة الموسيقى</h3>
                            <div class="service-status-indicator operational">
                                <div class="status-dot"></div>
                                <span data-lang-key="operational">تشغيلي</span>
                            </div>
                        </div>
                        <div class="service-uptime">98.7%</div>
                    </div>
                    
                    <div class="service-item animate-fade-in" style="animation-delay: 0.5s;">
                        <div class="service-icon">
                            <i class="fas fa-cloud"></i>
                        </div>
                        <div class="service-info">
                            <h3 data-lang-key="api-gateway">بوابة API</h3>
                            <div class="service-status-indicator operational">
                                <div class="status-dot"></div>
                                <span data-lang-key="operational">تشغيلي</span>
                            </div>
                        </div>
                        <div class="service-uptime">99.5%</div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Recent Incidents -->
        <section class="recent-incidents">
            <div class="incidents-container">
                <h2 class="incidents-title animate-fade-in">
                    <span data-lang-key="recent-incidents">الأحداث الأخيرة</span>
                </h2>
                
                <div class="incidents-list">
                    <div class="incident-item resolved animate-fade-in" style="animation-delay: 0.2s;">
                        <div class="incident-status">
                            <i class="fas fa-check-circle"></i>
                        </div>
                        <div class="incident-content">
                            <div class="incident-title" data-lang-key="incident-1-title">انقطاع مؤقت في خدمة الموسيقى</div>
                            <div class="incident-description" data-lang-key="incident-1-desc">تم حل المشكلة وعادت الخدمة للعمل بشكل طبيعي</div>
                            <div class="incident-time">منذ 3 أيام</div>
                        </div>
                        <div class="incident-badge resolved">
                            <span data-lang-key="resolved">تم الحل</span>
                        </div>
                    </div>
                    
                    <div class="no-incidents animate-fade-in" style="animation-delay: 0.4s;">
                        <i class="fas fa-shield-alt"></i>
                        <h3 data-lang-key="all-systems-operational">جميع الأنظمة تعمل بشكل طبيعي</h3>
                        <p data-lang-key="no-current-issues">لا توجد مشاكل حالية تؤثر على الخدمة</p>
                    </div>
                </div>
            </div>
        </section>

        <%- include("partials/mainfooter", {domain, bot}) %>
    </body>
</div>

