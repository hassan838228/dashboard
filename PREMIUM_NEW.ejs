<script>
// Billing toggle functionality
document.getElementById('billingToggle').addEventListener('click', function() {
    this.classList.toggle('active');
    
    const monthlyAmounts = document.querySelectorAll('.amount.monthly');
    const yearlyAmounts = document.querySelectorAll('.amount.yearly');
    const toggleLabels = document.querySelectorAll('.toggle-label');
    
    if (this.classList.contains('active')) {
        // Show yearly prices
        monthlyAmounts.forEach(el => el.style.display = 'none');
        yearlyAmounts.forEach(el => el.style.display = 'inline');
        toggleLabels[0].classList.remove('active');
        toggleLabels[1].classList.add('active');
    } else {
        // Show monthly prices
        monthlyAmounts.forEach(el => el.style.display = 'inline');
        yearlyAmounts.forEach(el => el.style.display = 'none');
        toggleLabels[0].classList.add('active');
        toggleLabels[1].classList.remove('active');
    }
});

// FAQ functionality
document.querySelectorAll('.faq-question').forEach(question => {
    question.addEventListener('click', function() {
        const faqItem = this.parentElement;
        const isActive = faqItem.classList.contains('active');
        
        // Close all FAQ items
        document.querySelectorAll('.faq-item').forEach(item => {
            item.classList.remove('active');
        });
        
        // Open clicked item if it wasn't active
        if (!isActive) {
            faqItem.classList.add('active');
        }
    });
});

// Plan button functionality
document.querySelectorAll('.plan-button').forEach(button => {
    button.addEventListener('click', function() {
        const planName = this.closest('.pricing-card').querySelector('.plan-name').textContent;
        const isYearly = document.getElementById('billingToggle').classList.contains('active');
        
        // Here you would integrate with your payment processor
        console.log(`Selected plan: ${planName}, Yearly: ${isYearly}`);
        
        // For now, just show an alert
        alert(`You selected the ${planName} plan! Payment integration would go here.`);
    });
});

// Initialize toggle labels
document.querySelectorAll('.toggle-label')[0].classList.add('active');
</script>